<h1>Create a New Gathering</h1>

<%= form_for(@gathering) do |f| %>
    <%if @group%>
        <h2>New Gathering for <%=@group.game_title%></h2>
        <%=f.hidden_field :group_id, value: @group.id%>
    <%else%>
        <h3>Select a Group</h3>
        <%=f.label :group_id%>
        <%= f.collection_select :group_id, Group.all, :id, :game_title, include_blank: true %>
        <h3>Or Create a New Group</h3>
        <%= f.fields_for :group, group.new do |g| %>
            <%= g.label :game_title %>
            <%= g.text_field :game_title %>
            <%= g.label :game_category %>
            <%= g.select :game_category, [
                ['Board Game', 'Board Game'], 
                ['Card Game', 'Card Game'], 
                ['RPG', 'RPG']], 
                :include_blank => true %>
            <% end %> 
    <% end %>
    <%= f.label :game_cafe, 'Which Cafe?' %>
    <%= f.select :game_cafe, [
        ['Vigilante', 'Vigilante'], 
        ['Emerald Tavern', 'Emerald Tavern'], 
        ['Dragons Lair', 'Dragons Lair'],
        ['Gaming Goat', 'Gaming Goat']], 
        :include_blank => true %>
    <%= f.label :day_of_week, 'Which Day?' %>
    <%= f.select :day_of_week, [
        ['Sunday', 'Sunday'], 
        ['Monday', 'Monday'], 
        ['Tuesday', 'Tuesday'],
        ['Wednesday', 'Wednesday'],
        ['Thursday', 'Thursday'],
        ['Friday', 'Friday'],
        ['Saturday', 'Saturday']], 
        :include_blank => true %>
    <%= f.label :group_id, 'Which Game?' %>
    <%= f.collection_select :group_id, Group.all, :id, :game_title, :include_blank => true %>
    <%= f.submit 'Create Gathering' %>
<% end %>